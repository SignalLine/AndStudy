<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_weixin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.com.single.andstudy.activity.WeixinActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:background="@drawable/tab_bg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <cn.com.single.andstudy.ChangeColorIconWithText
            android:id="@+id/tab_home"
            android:layout_weight="1"
            android:layout_width="0dp"
            app:icon="@drawable/ic_menu_start_conversation"
            app:color="#ff45c01a"
            app:text="@string/tab_name"
            android:padding="5dp"
            app:text_size="12sp"
            android:layout_height="match_parent"/>

        <cn.com.single.andstudy.ChangeColorIconWithText
            android:id="@+id/tab_contact"
            android:layout_weight="1"
            android:layout_width="0dp"
            app:icon="@drawable/ic_menu_friendslist"
            app:color="#ff45c01a"
            app:text="@string/tab_contact"
            android:padding="5dp"
            app:text_size="12sp"
            android:layout_height="match_parent"/>

        <cn.com.single.andstudy.ChangeColorIconWithText
            android:id="@+id/tab_found"
            android:layout_weight="1"
            android:layout_width="0dp"
            app:icon="@drawable/ic_menu_allfriends"
            app:color="#ff45c01a"
            app:text="@string/tab_found"
            android:padding="5dp"
            app:text_size="12sp"
            android:layout_height="match_parent"/>

        <cn.com.single.andstudy.ChangeColorIconWithText
            android:id="@+id/tab_me"
            android:layout_weight="1"
            android:layout_width="0dp"
            app:icon="@drawable/ic_menu_emoticons"
            app:color="#ff45c01a"
            app:text="@string/tab_me"
            android:padding="5dp"
            app:text_size="12sp"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>
